<Window x:Class="Plotastrophe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plotastrophe"
        mc:Ignorable="d"
        Title="Plotastrophe" Height="1024" Width="1024">
    <DockPanel>
        <Border DockPanel.Dock="Top" Name="canvasBorder" BorderBrush="Bisque" BorderThickness="2" Height="750" Width="750" VerticalAlignment="Top">
            <Canvas Height="750" Width="750" Name="canvas" Background="White" ClipToBounds="True"></Canvas>
        </Border>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="selectModeText" FontSize="20" Text="Selection Mode: None"/>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
